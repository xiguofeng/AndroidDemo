<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipragmatech.socialengineapi.activity.LoginActivity"
    android:background="@drawable/splash" >


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/login_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/magento_logo"
        android:layout_marginTop="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/server_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/login_img_logo"
        />


    <Button
        android:id="@+id/login_btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:textColor="#ffffff"
        android:text="@string/get_started"
        android:background="#ffff7607" />

    <Button
        android:id="@+id/catalog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:textColor="#ffffff"
        android:text="@string/catalog_btn_text"
        android:background="#ffff7607"
        android:visibility="gone"
        />




</RelativeLayout>

